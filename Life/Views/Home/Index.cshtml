@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            display: flex;
        }
        .sidebar {
            width: 250px;
            background-color: #343a40;
            color: white;
            height: 100vh;
            padding: 20px 10px;
            position: fixed;
        }
        .sidebar a {
            color: white;
            text-decoration: none;
            display: block;
            padding: 10px;
            margin: 5px 0;
            border-radius: 5px;
        }
        .sidebar a:hover {
            background-color: #495057;
        }
        .content {
            margin-left: 260px;
            padding: 20px;
            width: 100%;
        }
        .header {
            text-align: center;
            margin-bottom: 20px;
        }
        .product-category {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <h3 class="text-center mb-4"><i class="fas fa-leaf"></i> Life Green</h3>
        <a href="#" class="active"><i class="fas fa-home"></i> Home</a>
        <a asp-action="Edit" asp-controller="User"><i class="fas fa-user-edit"></i> Editar Cadastro</a>
        <a asp-action="Index" asp-controller="Login"><i class="fas fa-sign-out-alt"></i> Sair</a>
        <a asp-action="Product" asp-controller="Product"><i class="fas fa-box"></i> Produtos</a>
    </div>
    <div class="content">
        <h1 class="header">Life Green - ESN</h1>
        <div class="product-category">
            <h3>Frutas</h3>
            <ul>
                <li>Maçã</li>
                <li>Banana</li>
                <li>Laranja</li>
                <li>Morango</li>
                <li>Abacaxi</li>
            </ul>
        </div>
        <div class="product-category">
            <h3>Legumes</h3>
            <ul>
                <li>Cenoura</li>
                <li>Batata</li>
                <li>Abóbora</li>
                <li>Beterraba</li>
                <li>Ervilha</li>
            </ul>
        </div>
        <div class="product-category">
            <h3>Verduras</h3>
            <ul>
                <li>Alface</li>
                <li>Rúcula</li>
                <li>Espinafre</li>
                <li>Couve</li>
                <li>Agrião</li>
            </ul>
        </div>
    </div>
</body>
</html>

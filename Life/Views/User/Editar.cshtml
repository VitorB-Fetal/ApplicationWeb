@model Life.Models.User

@{
    ViewData["Title"] = "Editar Usuário";
}

<div class="container mt-5">
    <h2>Editar Usuário</h2>

    <!-- Mensagens de sucesso ou erro -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <!-- Formulário de edição -->
    <form asp-action="Editar" method="post">
        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="mb-3">
            <label for="Name">Nome</label>
            <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
        </div>
        <div class="mb-3">
            <label for="Email">Email</label>
            <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required />
        </div>
        <div class="mb-3">
            <label for="Phone">Telefone</label>
            <input type="text" class="form-control" id="Phone" name="Phone" value="@Model.Phone" />
        </div>
        <div class="mb-3">
            <label for="CPF">CPF</label>
            <input type="text" class="form-control" id="CPF" name="CPF" value="@Model.CPF" />
        </div>
        <div class="mb-3">
            <label for="Password">Nova Senha</label>
            <input type="password" class="form-control" id="Password" name="Password" placeholder="Opcional" />
        </div>
        <button type="submit" class="btn btn-primary">Salvar Alterações</button>
    </form>
</div>

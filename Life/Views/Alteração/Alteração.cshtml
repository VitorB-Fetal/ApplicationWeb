@model Life.Models.User
@{
    ViewBag.Title = "Alterar Dados do Perfil";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet">

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

<style>
    body {
        background-image: url('../Imagem/Fundo.jpg');
        background-size: cover;
        font-family: Arial, sans-serif;
    }

    .container {
        max-width: 600px;
        margin: 50px auto;
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
        font-size: 24px;
        margin-bottom: 20px;
    }

    .form-control:focus {
        border-color: darkgreen;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }

    .btn-primary {
        width: 100%;
        padding: 12px;
        font-size: 16px;
        font-weight: bold;
        border-radius: 5px;
    }
</style>

<div class="container">
    <h2><i class="fas fa-user-edit"></i> Alterar Perfil</h2>
    @using (Html.BeginForm("EditProfile", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="mb-3">
            @Html.LabelFor(model => model.Nome, "Nome", new { @class = "form-label" })
            @Html.TextBoxFor(model => model.Nome, new { @class = "form-control", @placeholder = "Digite o seu nome" })
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.Email, "E-mail", new { @class = "form-label" })
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Digite o seu e-mail" })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.TelefoneComercial, "Telefone", new { @class = "form-label" })
            @Html.TextBoxFor(model => model.TelefoneComercial, new { @class = "form-control", @placeholder = "Digite o seu telefone" })
            @Html.ValidationMessageFor(model => model.TelefoneComercial, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.NichoTrabalho, "Nicho de Trabalho", new { @class = "form-label" })
            @Html.DropDownListFor(model => model.NichoTrabalho, new SelectList(ViewBag.Nichos), "-- Selecione um nicho --", new { @class = "form-select" })
            @Html.ValidationMessageFor(model => model.NichoTrabalho, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            <label for="Foto" class="form-label">Foto de Perfil</label>
            <input type="file" id="Foto" name="Foto" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Salvar Alterações</button>

        <div class="card-footer text-center mt-4">
            <small>© 2024 GreenLife - Todos os direitos reservados</small>
        </div>
    }
</div>

<script>
    $(document).ready(function () {
        $('form').on('submit', function (e) {
            let isValid = true;

            $('input, select').each(function () {
                if (!$(this).val() && $(this).attr('type') !== 'file') {
                    toastr.error('Todos os campos obrigatórios devem ser preenchidos!', 'Erro de Validação');
                    isValid = false;
                    return false;
                }
            });

            if (!isValid) {
                e.preventDefault();
            }
        });
    });
</script>

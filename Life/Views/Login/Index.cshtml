@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <h2 class="text-center">Login</h2>

    <!-- Exibir mensagens de erro ou sucesso -->
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Erro!</strong> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Sucesso!</strong> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form method="post" asp-action="Authenticate">
        <div class="mb-3">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="email" required placeholder="Digite seu email" />
        </div>
        <div class="mb-3">
            <label for="password">Senha</label>
            <input type="password" class="form-control" id="password" name="password" required placeholder="Digite sua senha" />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Entrar</button>
    </form>

    <p class="mt-3 text-center">Não possui conta? <a asp-action="Index" asp-controller="Cadastro">Cadastre-se</a></p>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

@model Life.Models.User

@{
    ViewData["Title"] = "Alterar Dados";
}

<div class="container mt-5">
    <h2 class="text-center">Alterar Dados</h2>

    <!-- Exibir mensagens de erro ou sucesso -->
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Erro!</strong> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Sucesso!</strong> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form method="post">
        <div class="mb-3">
            <label for="name">Nome</label>
            <input type="text" class="form-control" id="name" name="Name" value="@Model.Name" required placeholder="Digite seu nome" />
        </div>
        <div class="mb-3">
            <label for="phone">Telefone</label>
            <input type="text" class="form-control" id="phone" name="Phone" value="@Model.Phone" placeholder="Digite seu telefone" />
        </div>
        <div class="mb-3">
            <label for="cpf">CPF</label>
            <input type="text" class="form-control" id="cpf" name="CPF" value="@Model.CPF" placeholder="Digite seu CPF" />
        </div>

        <button href="../Login/Index" type="submit" class="btn btn-primary btn-block">Salvar Alterações</button>
    </form>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
